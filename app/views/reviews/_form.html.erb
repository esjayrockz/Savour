<div class="form_padd">
<%= form_for ([@dish,@review]) do |f|%>
<% if @review.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@review.errors.count, "error") %> prohibited this link from being saved:</h2>

    <ul>
    <% @review.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

  <div class="form-group clearfix">
  <div class="col-xs-7 ">
  <%= f.label :comment, 'Write a review' %><br> 
  <%= f.text_area :comment, class: "form-control ",required: true %><br>
  </div>
  <div class="col-xs-7 ">
  <%= f.label :rating, 'Choose a rating'%><br>
  <div class="star-rating"></div>
  </div>
  </div>
  <br>
  <div class="form-group col-xs-4 ">
    <%= f.submit "Submit", class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
</div>
<script>
$('.star-rating').raty({
  path: '/assets',
  scoreName: 'review[rating]'
});
</script>
