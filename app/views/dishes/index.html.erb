<body class = "index">
<table class="table table-striped table-hover">
  <h2><font color="white"> #Trending dishes this week</font> </h1>
  <thead >
    <tr class="active">
      <th>Dish</th>
      <th>Restaurant</th>
      <th>Rating</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
<% @dishes.each do |dish| %>
<tr >
<td class="active"><%= dish.dish %></td>
<td class="success"><%= dish.user.email %></td>
<td class="warning"><%= dish.rating %></td>
<td class="danger"><%= link_to "View dish", dish %>
</tr>
<% end %>
</tbody>
</table>
</body>
